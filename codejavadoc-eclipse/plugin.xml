<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="Codejavadoc"
         name="Code to JavaDoc Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="com.codejavadoc.eclipse.CodejavadocBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="Codejavadoc"
         name="Sample Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="com.codejavadoc.eclipse.Codejavadoc">
         </run>
      </runtime>
      <builder
            id="codejavadoc-eclipse.Codejavadoc">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IProject"
            nameFilter="*"
            id="codejavadoc-eclipse.contribution1">
         <action
               label="Add/Remove Code to JavaDoc"
               class="com.codejavadoc.eclipse.ToggleNatureAction"
               menubarPath="additions"
               enablesFor="+"
               id="codejavadoc-eclipse.addRemoveNatureAction">
         </action>
      </objectContribution>
   </extension>

</plugin>
